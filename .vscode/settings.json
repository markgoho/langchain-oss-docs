{
  // Editor settings for consistent formatting
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 999999,
  "editor.rulers": [],
  "editor.wrappingIndent": "none",

  // Disable automatic hard line breaks
  "prettier.printWidth": 999999,
  "rewrap.autoWrap.enabled": false,
  "rewrap.wrappingColumn": 999999,

  // Tab settings - 1 tab = 4 spaces
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,

  // Disable double space after period
  "editor.autoClosingBrackets": "always",
  "editor.suggestSelection": "first",

  // Markdown specific settings
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.wordWrapColumn": 999999,
    "editor.rulers": [],
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "files.trimTrailingWhitespace": true,
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": false
    }
  },

  // MDX specific settings
  "[mdx]": {
    "editor.wordWrap": "on",
    "editor.wordWrapColumn": 999999,
    "editor.rulers": [],
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "files.trimTrailingWhitespace": true,
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": false
    }
  },

  // Python settings (for code examples)
  "[python]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },

  // JavaScript/TypeScript settings (for code examples)
  "[javascript]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },
  "[typescript]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },
  "[javascriptreact]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },
  "[typescriptreact]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },

  // JSON settings
  "[json]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[jsonc]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },

  // Disable format on save to prevent unwanted line breaks
  "editor.formatOnSave": false,
  "[markdown]": {
    "editor.formatOnSave": false
  },
  "[mdx]": {
    "editor.formatOnSave": false
  },

  // File associations
  "files.associations": {
    "*.mdx": "mdx"
  },

  // Disable minimap for documentation files
  "editor.minimap.enabled": false,

  // Search exclusions
  "search.exclude": {
    "**/build": true,
    "**/node_modules": true,
    "**/.venv": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true
  },

  // Files to exclude from explorer
  "files.exclude": {
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/*.pyc": true,
    "**/.DS_Store": true
  },

  // Trim trailing whitespace
  "files.trimTrailingWhitespace": true,

  // Final newline
  "files.insertFinalNewline": true,

  // Line ending
  "files.eol": "\n",
}
